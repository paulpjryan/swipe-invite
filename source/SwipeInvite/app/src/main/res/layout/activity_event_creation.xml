
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    xmlns:tools="http://schemas.android.com/tools"


    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.team16.swipeinvite.group_edit"
    android:id="@+id/relativeLayout">

    <!--
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    -->


    <LinearLayout
        android:id="@+id/linearLayout_profile_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Event Name:"
            android:id="@+id/textView"
            android:layout_weight="2"
            android:gravity="center_vertical"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="8"
            android:id="@+id/textView_new_event"
            android:layout_weight="8"
            android:maxLength="35"
            android:maxLines="2" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_profile_event_location"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout_profile_event_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location:"
            android:id="@+id/textView_location"
            android:layout_weight="5"
            android:gravity="center_vertical"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="8"
            android:id="@+id/textView_event_location"
            android:maxLength="35"
            android:maxLines="2"
            android:layout_weight="5.54" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_profile_event_description"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout_profile_event_location">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description:"
            android:id="@+id/textView_description"
            android:layout_weight="2"
            android:gravity="center_vertical"/>/>

        </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="8"
        android:id="@+id/et_edit_event_description"
        android:layout_below="@+id/linearLayout_profile_event_description"

        android:layout_alignRight="@+id/linearLayout_profile_event_description"
        android:layout_alignEnd="@+id/linearLayout_profile_event_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="vertical"
        android:lines="2"
        android:singleLine="false"
        android:maxLines="6"
        android:maxLength="800"
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start Date:"
            android:layout_marginTop="20dp"
            android:id="@+id/textView2"
            android:layout_below="@id/et_edit_event_description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/linearLayout_profile_event_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:id="@+id/event_start_date"></DatePicker>

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:id="@+id/event_start_time"></TimePicker>


    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="End Date:"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/linearLayout_profile_event_start_time"
            android:id="@+id/textView3" />


    <LinearLayout
        android:id="@+id/linearLayout_profile_event_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:id="@+id/event_end_date"></DatePicker>

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:id="@+id/event_end_time"></TimePicker>

    </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="onEventSubmit"
            android:id="@+id/button_event_submit"
            android:layout_marginTop="30dp"
            android:layout_below="@id/linearLayout_profile_event_end_time"
            android:layout_gravity="right" />





</RelativeLayout>
    </ScrollView>